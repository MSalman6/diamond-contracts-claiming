{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": false
  },
  "files": ["./hardhat.config.ts"],
  "include": ["test/**/*", "./tasks/**/*", "./scripts/**/*"]
}
